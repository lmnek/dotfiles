# Examples:
# https://github.com/search?q=path%3Aghostty%2Fconfig&type=code

initial-command = fish
shell-integration = fish

font-size = 17
font-family = JetBrainsMono Nerd Font

window-padding-balance = true
window-padding-x = 0
window-padding-y = 0
# window-padding-color = extend

theme = "Dracula"
maximize = true
window-decoration = none

# distracting UI popups:
confirm-close-surface = false
resize-overlay = never

# Disable all keybinds
# (Alt+nubers stopped working for zellij as it was assigned to tab managements
# ghostty +list-keybinds --default
keybind=clear
keybind = ctrl+shift+p=toggle_command_palette

keybind = ctrl+equal=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1

keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
