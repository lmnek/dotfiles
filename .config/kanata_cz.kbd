
(defcfg
    process-unmapped-keys yes
    log-layer-changes no

    linux-dev-names-include (
        "Keychron Keychron K9 Pro"
    )
    linux-unicode-termination enter
)

(defvar
    tap-time 200
    hold-time 250
)

