######################################
# color settings for bar and windows #
######################################

# define colors for windows (Dracula):
# class                 border  bground text    indicator child_border
client.focused          #44475A #44475A #F8F8F2 #6272A4   #6272A4
client.focused_inactive #44475A #44475A #F8F8F2 #44475A   #44475A
client.unfocused        #282A36 #282A36 #BFBFBF #282A36   #282A36
client.urgent           #44475A #FF5555 #F8F8F2 #FF5555   #FF5555
client.placeholder      #282A36 #282A36 #F8F8F2 #282A36   #282A36

client.background       #F8F8F2

############################################
# bar settings (input comes from i3blocks) #
############################################

# Start i3bar to display a workspace bar
# (plus the system information i3status finds out, if available)
bar {
        # note: jetbrains without nerd font + fallback nerd font
        # -> because JetBrains nerd font had some icons width weird margins/sizes
        font pango: JetBrains Mono, SymbolsNerdFont 11
		status_command i3blocks -c ~/.config/i3/i3blocks.conf
	    position bottom
		tray_padding 4

        # i3bar_command i3bar --transparency
        # it could be that you have no primary display set: set one (xrandr --output <output> --primary)
        # reference: https://i3wm.org/docs/userguide.html#_tray_output
		#tray_output primary

        # When strip_workspace_numbers is set to yes,
        # any workspace that has a name of the form
        # “[n][:][NAME]” will display only the name.
        strip_workspace_numbers yes

        colors {
            # Dracula:
            background #282A36
            statusline #F8F8F2
            separator  #44475A

            focused_workspace  #44475A #44475A #F8F8F2
            active_workspace   #282A36 #44475A #F8F8F2
            inactive_workspace #282A36 #282A36 #BFBFBF
            urgent_workspace   #FF5555 #FF5555 #F8F8F2
            binding_mode       #FF5555 #FF5555 #F8F8F2
	}
}

#####################################
# Application menu handled by rofi: #
#####################################

## application launcher 
bindsym $mod+d exec rofi -modi drun -show drun \
		-config ~/.config/rofi/rofidmenu.rasi

## focusing opened application 
bindsym $mod+Shift+d exec rofi -show window \
		-config ~/.config/rofi/rofidmenu.rasi

## clipboard manager (install rofi-greenclip from the AUR)
exec --no-startup-id greenclip daemon>/dev/null
bindsym $mod+c exec --no-startup-id rofi -modi "clipboard:greenclip print" -show clipboard \
		-config ~/.config/rofi/rofidmenu.rasi -run-command '{cmd}' 

## Calculator
bindsym $mod+Shift+c exec --no-startup-id rofi -show calc -modi calc -no-show-match -no-sort

## Emoji picker
bindsym $mod+e exec --no-startup-id rofi -show emoji

## Web search with prefixes
bindsym $mod+g exec --no-startup-id ~/.config/rofi/scripts/rofi-web-search.sh

## Attach zellij sessions
bindsym $mod+z exec --no-startup-id ~/.config/rofi/scripts/rofi-zellij.sh

#####################################
# Keybinds for launching apps #
#####################################

bindsym $mod+Return exec $term -e fish
bindsym $mod+period exec "ghostty --class=com.lmnk.yazi -e fish -c 'y; exec fish'"

# Need to install: maim, xclip, xdotool
# Screenshots in files
bindsym Print       exec --no-startup-id flameshot gui -c
bindsym Shift+Print exec --no-startup-id flameshot gui -c -p "/home/$USER/pix/screens/"

## Scratchpads

# toggle last scratchpad
bindsym $mod+x exec --no-startup-id ~/.config/i3/scripts/toggle_last_scratchpad

# hide all scratchpads
bindsym $mod+Shift+x [floating] move scratchpad

for_window [class="scratchterm"] floating enable, resize set 1200 1000, move scratchpad, border pixel 3
bindsym $mod+t [class="scratchterm"] scratchpad show move position center
exec ghostty --class=com.lmnk.scratchterm -e zellij attach --create scratchpad

for_window [class="Raindrop.io"] floating enable, resize set 1600 1000, move scratchpad, border pixel 3, focus, move position center
for_window [title="Blanket"] floating enable, resize set 600 800, move scratchpad, focus, move position center
for_window [title="tidal-hifi"] floating enable, resize set 1600 1000, move scratchpad, border pixel 1, focus, move position center

set $show_tidal   [class="tidal-hifi"] scratchpad show move position center
set $show_raindrop [class="Raindrop.io"] scratchpad show move position center
set $show_blanket [title="Blanket"] scratchpad show move position center

bindsym $mod+o mode "open"
mode "open" {
    bindsym o mode "launch"
    bindsym $mod+o mode "launch"

    # Tidal
    bindsym t         exec --no-startup-id i3-msg "$show_tidal", mode "default"
    bindsym $mod+t    exec --no-startup-id i3-msg "$show_tidal", mode "default"

    # Raindrop
    bindsym r         exec --no-startup-id i3-msg "$show_raindrop", mode "default"
    bindsym $mod+r    exec --no-startup-id i3-msg "$show_raindrop", mode "default"

    # Blanket
    bindsym b         exec --no-startup-id i3-msg "$show_blanket", mode "default"
    bindsym $mod+b    exec --no-startup-id i3-msg "$show_blanket", mode "default"

    bindsym Escape    mode "default"
}

mode "launch" {
    bindsym t        exec --no-startup-id tidal-hifi, mode "default"
    bindsym $mod+t   exec --no-startup-id tidal-hifi, mode "default"

    bindsym r        exec --no-startup-id raindrop, mode "default"
    bindsym $mod+r   exec --no-startup-id raindrop, mode "default"

    bindsym b        exec --no-startup-id blanket, mode "default"
    bindsym $mod+b   exec --no-startup-id blanket, mode "default"

    # Zen browser: default profile
    bindsym z              exec --no-startup-id zen-browser, mode "default"
    bindsym $mod+z         exec --no-startup-id zen-browser, mode "default"
    # Zen browser: chill profile
    bindsym Shift+z        exec --no-startup-id zen-browser -P Chill, mode "default"
    bindsym $mod+Shift+z   exec --no-startup-id zen-browser -P Chill, mode "default"

    # Zen browser: PWAs with WebApp profile
    ## LibreChat
    bindsym l        exec --no-startup-id zen-browser -P WebApp --class="pwa_librechat" --new-window "https://librechat-librechat.hf.space", mode "default"
    bindsym $mod+l   exec --no-startup-id zen-browser -P WebApp --class="pwa_librechat" --new-window "https://librechat-librechat.hf.space", mode "default"
    ## ChatGPT
    bindsym c        exec --no-startup-id zen-browser -P WebApp --class="pwa_chatgpt" --new-window "https://chatgpt.com/", mode "default"
    bindsym $mod+c   exec --no-startup-id zen-browser -P WebApp --class="pwa_chatgpt" --new-window "https://chatgpt.com/", mode "default"
    ## Gemini
    bindsym g        exec --no-startup-id zen-browser -P WebApp --class="pwa_gemini" --new-window "https://gemini.google.com/", mode "default"
    bindsym $mod+g   exec --no-startup-id zen-browser -P WebApp --class="pwa_gemini" --new-window "https://gemini.google.com/", mode "default"
    ## Proton mail
    bindsym p        exec --no-startup-id zen-browser -P WebApp --class="pwa_proton" --new-window "https://mail.proton.me", mode "default"
    bindsym $mod+p   exec --no-startup-id zen-browser -P WebApp --class="pwa_proton" --new-window "https://mail.proton.me", mode "default"

    bindsym Escape    mode "default"
}
